{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": ["es2023"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDirs": ["src"],
    "sourceMap": true,
    "target": "es2022"
  },
  "exclude": ["*.config.js", "coverage", "generators"],
  "include": [".**/**/*", "**/*"]
}
