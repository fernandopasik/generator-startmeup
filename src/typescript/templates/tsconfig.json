{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    // <% if (react) { %>
    "jsx": "react",
    // <% } %>
    "lib": ["dom", "dom.iterable", "es2021"],
    "module": "<%= module %>",
    "moduleResolution": "node",
    "noEmit": true,
    // <% if (lit) { %>
    "plugins": [{ "name": "ts-lit-plugin", "strict": true }],
    // <% } %>
    "resolveJsonModule": true,
    "rootDirs": ["src"],
    "sourceMap": true,
    "target": "es2019"
  },
  "exclude": [
    ///<%- excludeFiles -%>
  ],
  "include": [".**/**/*", "**/*"]
}
